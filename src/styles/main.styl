
body
	position relative
	display block
	height 100vh
	margin 0
	padding 0
	background-color #80b6dc
	opacity 0
	&:before
		content ''
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		opacity .1
		background-image url('./images/bg.jpg')
		background-size cover

	
	&.loaded
		animation fade-in .2s
		animation-fill-mode forwards


#world
	position absolute
	width 100%
	height 100%
	overflow hidden


#gui
	position absolute
	top 0
	right 0


// animation
@keyframes fade-in
	0%
		opacity 0
	100%
		opacity 1