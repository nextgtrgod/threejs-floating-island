// fonts
@import url('https://fonts.googleapis.com/css?family=Poiret+One')

$font-default = 'Poiret One', cursive;



body
	position relative
	display block
	height 100vh
	margin 0
	padding 0
	background-color #80b6dc
	opacity 0
	font-family: $font-default
	&:before
		content ''
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		opacity .2
		background-image url('./images/bg.jpg')
		background-size cover
		// filter blur(5px)

	
	&.loaded
		animation fade-in .2s
		animation-fill-mode forwards


#world
	position absolute
	width 100%
	height 100%
	overflow hidden


#gui
	position absolute
	top 0
	right 0

.date
	position absolute
	left 1vw
	bottom 1vw
	font-size 40px
	span
		font-size 1.5em
		&#day
			font-size 1em
			display block


// animation
@keyframes fade-in
	0%
		opacity 0
	100%
		opacity 1